<!DOCTYPE html>
<html lang="de">
  {% set prevCard = fullSeriesInfo.cards | getPreviousCollectionItem(page) %}
  {% set nextCard = fullSeriesInfo.cards | getNextCollectionItem(page) %}
  {% set cardIndex = (fullSeriesInfo.cards | getCollectionItemIndex(page)) + 1 %}
  {% set seriesCardCount = fullSeriesInfo.cards | length %}
  <head>
    {% include "components/core/base-head.njk" %}
    <link rel="dns-prefetch" href="{{ build.cdnDomain }}" />
    {% if prevCard %}
    <link rel="prev" href="{{ prevCard.url }}" />
    {% endif %}
    {% if nextCard %}
    <link rel="next" href="{{ nextCard.url }}" />
    {% endif %}
  </head>

  <body>
    <main class="{{ layoutClass }}" id="main" tabindex="-1">
      <header>
        <section class="series">
          <div class="series__inner">
            <p>
              <strong>Serie {{ fullSeriesInfo.id }}/{{ cardNumber }}</strong>
            </p>
            <p>
              <a href="/{{ fullSeriesInfo.name | slugify }}">{{
                fullSeriesInfo.name
              }}</a>
            </p>
          </div>
        </section>
        <a href="/" class="logo-container">
          <img
            src="/img/zeichen-guter-gastlichkeit.avif"
            alt="Zeichen guter Gastlichkeit"
            class="logo"
          />
        </a>
      </header>
      <article class="card">
        <figure class="card-image">
          {% if image %}
          <img
            src="{{ image }}"
            alt="{{ imageAlt }}"
            data-image-sizes="(min-width: 780px) 33vw, 90vw"
            data-process-image
          />
          {% endif %}
        </figure>
        <div class="ornamental-frame">
          <span class="frame-corners" aria-hidden="true"></span>
        <section class="card-content">
          <header>
            <h1 class="main-headline">{{ title }}</h1>
          </header>
          <section class="card-text">
            <audio controls preload="metadata" src="{{ audio }}"></audio>
          </section>
          <section class="card-text">
            {{ content | safe }}
          </section>
          <section class="card-text metadata">
            {% if music.isLofiGenerator %}
            <p>
              Musik generiert von
              <a href="https://lofigenerator.com">lofi generator</a> unter
              <a href="https://creativecommons.org/licenses/by/4.0/"
                >CC BY 4.0</a
              >
              Lizenz.
            </p>
            {% else %}
            <p>
              Musik von {{ music.artist }} vom Album
              <a href="{{ music.albumLink }}">{{ music.albumName }}</a
              >.
            </p>
            {% endif %}
          </section>
        </section>
        </div>
      </article>
    </main>
    <footer class="page-footer card-footer">
      <div class="card-footer__inner">
        <nav class="card-nav" aria-label="Kartennavigation">
          {% if prevCard %}
          <a href="{{ prevCard.url }}" class="card-nav__prev" rel="prev" data-prefetch>← {{ prevCard.data.title }}</a>
          {% endif %}
          <span class="card-nav__position">{{ cardIndex }}&thinsp;/&thinsp;{{ seriesCardCount }}</span>
          {% if nextCard %}
          <a href="{{ nextCard.url }}" class="card-nav__next" rel="next" data-prefetch>{{ nextCard.data.title }} →</a>
          {% endif %}
        </nav>
        <nav class="card-nav-series" aria-label="Seriennavigation">
          <a href="/{{ fullSeriesInfo.name | slugify }}">Alle Rezepte in {{ fullSeriesInfo.name }}</a>
          <a href="/">Start</a>
        </nav>
      </div>
      {% include "components/core/end-role.njk" %}
    </footer>
    {% if prevCard or nextCard %}
    <script type="module" loading="lazy" src="/js/prefetch.js"></script>
    {% endif %}
  </body>
</html>
